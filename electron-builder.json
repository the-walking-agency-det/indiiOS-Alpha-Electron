{
    "appId": "com.indii.os",
    "productName": "indiiOS",
    "directories": {
        "output": "dist-electron"
    },
    "files": [
        "dist/**/*",
        "dist-electron/**/*",
        "package.json"
    ],
    "mac": {
        "category": "public.app-category.productivity",
        "target": [
            "dmg",
            "zip"
        ],
        "hardenedRuntime": true,
        "gatekeeperAssess": false
    },
    "win": {
        "target": [
            "nsis"
        ]
    },
    "linux": {
        "target": [
            "AppImage"
        ]
    }
}